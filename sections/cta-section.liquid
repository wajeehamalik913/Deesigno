<div class="cta-section color-inverse">
  <div class="page-width">
    <div class="cta-section__content">
      <h2 class="cta-section__heading h1">{{ section.settings.heading }}</h2>
      <p class="cta-section__text">{{ section.settings.text }}</p>
      <div class="cta-section__buttons">
        {%- if section.settings.button_label_1 != blank -%}
          <a class="button button--secondary" 
             {% if section.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_1 }}"{% endif %}>
            {{ section.settings.button_label_1 | escape }}
          </a>
        {%- endif -%}
        {%- if section.settings.button_label_2 != blank -%}
          <a class="button button--outline" 
             {% if section.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link_2 }}"{% endif %}>
            {{ section.settings.button_label_2 | escape }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "CTA Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Ready to bring your ideas to life?",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Start creating custom merchandise that represents your brand perfectly.",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label_1",
      "default": "Start Your Design",
      "label": "First button label"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "First button link"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "default": "Browse Products",
      "label": "Second button label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second button link"
    }
  ],
  "presets": [
    {
      "name": "CTA Section"
    }
  ]
}
{% endschema %}
