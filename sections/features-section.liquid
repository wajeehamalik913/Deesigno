<div class="features-section section-padding">
  <div class="page-width">
    <div class="features-section__header">
      <h2 class="features-section__heading h1">{{ section.settings.heading }}</h2>
      <p class="features-section__text">{{ section.settings.text }}</p>
    </div>
    
    <div class="features-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'feature' -%}
            <div class="feature-item">
              <div class="feature-item__icon">
                {{ block.settings.icon }}
              </div>
              <h3 class="feature-item__title h3">{{ block.settings.title }}</h3>
              <p class="feature-item__text">{{ block.settings.text }}</p>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

